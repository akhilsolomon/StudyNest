<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resourc_back">

    <!-- Spacer view at the top -->
    <View
        android:id="@+id/spacer_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints" />


    <!-- Branch List View positioned below profile image -->
    <ListView
        android:id="@+id/branch_list_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="125dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/spacer_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
