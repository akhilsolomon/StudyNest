<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/spacer_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true" />

        <Spinner
            android:id="@+id/spinner_college"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_below="@id/spacer_view"
            android:layout_marginTop="49dp"
            android:background="@drawable/edit_text_background"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_below="@id/spinner_college"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_below="@id/edit_name"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="Enter Password"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_reenter_password"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_below="@id/edit_password"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="Re-enter Password"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_below="@id/edit_reenter_password"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/corner_gradient"
            android:text="Confirm"
            android:textSize="22sp"
            android:textColor="#3A3A3A"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Registered? Login"
            android:layout_marginTop="10dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
