<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/openingfeedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback_back">

    <View
        android:id="@+id/spacer_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/feedback_button"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_below="@id/spacer_view"
        android:layout_marginTop="-47dp"
        android:background="@drawable/upper_buttons"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Back Arrow -->

        <!-- Feedback Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="Feedback"
            android:textColor="#A23A3A3A"
            android:textSize="22sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/enter_feedback"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_below="@id/feedback_button"
        android:layout_marginTop="70dp"
        android:background="@drawable/edit_text_background"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:hint="Enter Feedback"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/continue_button"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@id/enter_feedback"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/corner_gradient"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="22sp"
            android:textColor="#C63A3A3A"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>
