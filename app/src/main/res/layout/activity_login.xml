<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/openingtwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back">

    <View
        android:id="@+id/spacer_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/login_text"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_below="@id/spacer_view"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/corner_gradient"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="22sp"
            android:textColor="#3A3A3A"
            android:gravity="center"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_below="@id/login_text"
        android:layout_marginTop="49dp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Email"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_below="@id/edit_email"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/radio_group_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radio_student"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Student" />

        <RadioButton
            android:id="@+id/radio_admin"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Admin" />
    </RadioGroup>

    <TextView
        android:id="@+id/button_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group_role"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Forgot password?"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_below="@id/button_forgot_password"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/corner_gradient"
        android:text="Continue"
        android:textSize="22sp"
        android:textColor="#3A3A3A" />

    <TextView
        android:id="@+id/text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Not Yet Registered? Register"
        android:textColor="#993A3A3A"
        android:textSize="16sp" />

</RelativeLayout>
