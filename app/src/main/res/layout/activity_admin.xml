<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/change_prof_back"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Spacer view at the top -->
    <View
        android:id="@+id/spacer_view"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!-- Admin Username -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@drawable/headings_layout_background"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/admin_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Admin Username"
                android:textSize="20sp"
                android:textColor="@color/lightGray"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>

    <!-- Admin Email ID -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/headings_layout_background"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/admin_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Admin EmailID"
                android:textSize="20sp"
                android:textColor="@color/lightGray"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>

    <!-- Approve Resources Button -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/button_approve_resources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Resource Review"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Approve Users Button -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/button_approve_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Signup Requests"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Logout Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/button_logout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Logout"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="12dp" />
    </LinearLayout>
</LinearLayout>
