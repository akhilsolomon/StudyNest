<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.firebase_tut">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Firebase_tut">

        <!-- Splash screen as Launcher -->
        <activity android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity android:name=".LoginActivity"
            android:theme="@style/Theme.Firebase_tut"
            android:exported="true" />

        <!-- Other activities -->
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".ApproveUsersActivity" />
        <activity android:name=".ApproveResourcesActivity" />
        <activity android:name=".ResourceDetailActivity" />
        <activity android:name=".UserMainActivity" />
        <activity android:name=".EditProfileActivity" />

    </application>

</manifest>
