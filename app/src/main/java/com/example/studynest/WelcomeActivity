package com.example.yourapp

import android.content.Intent
import android.os.Bundle
import androidx.appcompat.app.AppCompatActivity
import kotlinx.android.synthetic.main.activity_welcome.* // Import synthetic properties

class WelcomeActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_welcome) // Make sure your XML file is named activity_welcome.xml

        // Set up click listeners for the buttons
        login_button.setOnClickListener {
            // Handle login button click
            // For example, navigate to the login screen
            val intent = Intent(this, LoginActivity::class.java)
            startActivity(intent)
        }

        register_button.setOnClickListener {
            // Handle register button click
            // For example, navigate to the registration screen
            val intent = Intent(this, RegisterActivity::class.java)
            startActivity(intent)
        }
    }
}
